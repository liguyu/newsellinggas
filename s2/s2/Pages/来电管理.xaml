<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:a="clr-namespace:Com.Aote.Attachs;assembly=s2DLL"
    xmlns:o="clr-namespace:Com.Aote.ObjectTools;assembly=s2DLL"
    xmlns:b="clr-namespace:Com.Aote.Behaviors;assembly=s2DLL"
    xmlns:m="clr-namespace:Com.Aote.Marks;assembly=s2DLL"
    xmlns:c="clr-namespace:Com.Aote.Controls;assembly=s2DLL"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
    xmlns:data="clr-namespace:System.Windows.Data;assembly=System.Windows"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
    xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit" 
	mc:Ignorable="d"
	x:Class="Com.Aote.Pages.来电管理" FontSize="13" Width="auto" Height="611"
	>

    <Grid x:Name="LayoutRoot" Height="Auto" Width="Auto" >
        <m:ResourceLoad Margin="0">
            <!--接单部门ItemsSource="{m:Exp Str=jiedanbumenlist}"-->
            <o:ObjectList Name="jiedanbumenlist" WebClientInfo="{StaticResource dbclient}"  Path="from paramvalue where param.name='接单部门'"/>
            <!--报修类型ItemsSource="{m:Exp Str=bxlxlist}"-->
            <o:ObjectList Name="bxlxlist" WebClientInfo="{StaticResource dbclient}"  Path="from paramvalue where param.name='报修类型'"/>
            <!--来电类型ItemsSource="{m:Exp Str=laidianlxlist}"-->
            <o:ObjectList Name="laidianlxlist" WebClientInfo="{StaticResource dbclient}"  Path="from paramvalue where param.name='来电类型'"/>
            <!--处理方式ItemsSource="{m:Exp Str=chulifangshilist}"-->
            <o:ObjectList Name="chulifangshilist" WebClientInfo="{StaticResource dbclient}"  Path="from paramvalue where param.name='处理方式'"/>
            <!--是否处理ItemsSource="{m:Exp Str=shifoulist}"-->
            <o:ObjectList Name="shifoulist" WebClientInfo="{StaticResource dbclient}"  Path="from paramvalue where param.name='是否处理'"/>
            <!--完成情况ItemsSource="{m:Exp Str=wcqklist}"-->
            <o:ObjectList Name="wcqklist" WebClientInfo="{StaticResource dbclient}"  Path="from paramvalue where param.name='完成情况'"/>
            <!--是否回访ItemsSource="{m:Exp Str=sfhflist}"-->
            <o:ObjectList Name="sfhflist" WebClientInfo="{StaticResource dbclient}"  Path="from paramvalue where param.name='是否回访'"/>
            <!--服务态度满意情况ItemsSource="{m:Exp Str=fwtdlist}"-->
            <o:ObjectList Name="fwtdlist" WebClientInfo="{StaticResource dbclient}"  Path="from paramvalue where param.name='服务态度满意情况' order by id"/>
            <!--质量满意情况ItemsSource="{m:Exp Str=zlmylist}"-->
            <o:ObjectList Name="zlmylist" WebClientInfo="{StaticResource dbclient}"  Path="from paramvalue where param.name='质量满意情况' order by id"/>

            <b:SyncActionFactory Name="SendNote"   >
                <b:CallMethodAction Name="savedata" TargetObject="{m:Exp Str=main.DataContext}"    MethodName="Save"/>
                <b:CallMethodAction    Name="tonote" TargetObject="{m:Exp Str=ms}"   MethodName="SendMsg"/>
                <b:CallMethodAction    Name="consumernew" TargetObject="{m:Exp Str=consumer}"   MethodName="New"/>

            </b:SyncActionFactory>
            <!--短信对象-->
            <!--f_floornum短信群发配置o:MSMObj Name="ms" WebClientInfo="{StaticResource dbclient}" Phone="13572428243,13689262869" Message="测试发送短信"/-->
            <o:MSMObj Name="ms" WebClientInfo="{StaticResource dbclient}" Phone="{m:Exp Str=$\{main.DataContext.f_acceptertel\}}" Message="{m:Exp Str=$客服中心\，报修编号\{main.DataContext.f_cucode\}电话\{main.DataContext.f_reapirtelnum\}地址：\{main.DataContext.f_unitname\}\,\{main.DataContext.f_useraddress\}\,\{main.DataContext.f_floornum\}。内容：\{main.DataContext.f_repairreason\}}"/>
            <!--自动提交电话对象-->
            <o:Phone Name="confirm" Confirm="{m:Exp Str=main.DataContext.State\=\=$End$}" LineNum="{m:Exp Str=IpTongDao.tongdao}" GongHao="{m:Exp Str=LoginUser.gonghao}" TelServiceUrl="http://192.168.10.67:8000"/>
            <!--维修对象-->
            <o:GeneralObject Name="maingo2" WebClientInfo="{StaticResource dbclient}" 
				EntityType="t_repairsys" Source="{m:Exp Str=wx.SelectedItem }"  
					IsInit="{m:Exp Str='this.State==$StartLoad'}"/>
            <!--回访对象-->
            <o:GeneralObject Name="maingo3" WebClientInfo="{StaticResource dbclient}" 
				EntityType="t_repairsys" Source="{m:Exp Str=hf.SelectedItem }"  
				IsInit="{m:Exp Str='this.State==$End'}"/>

            <!--用户对象 -->
            <o:GeneralObject Name="consumer" EntityType="t_userfiles" WebClientInfo="{StaticResource dbclient}"
             Path="{m:Exp Str=this.tiaojian}">
                <o:PropertySetter PropertyName="tiaojian" Value="{m:Exp Str=main.DataContext.f_userid !\= null :$one\/from t_userfiles where f_userid\=\'\{main.DataContext.f_userid\}\'$\,$$}"/>
                <o:PropertySetter PropertyName="tiaojian" Value="{m:Exp Str=$one/from t_userfiles where (f_phone\=\'\{main.DataContext.f_phone\}\'  or f_phone1 \=\'\{main.DataContext.f_phone\}\')}"/>
            </o:GeneralObject>
            <o:ObjectList Name="jiedanrenlist" WebClientInfo="{StaticResource dbclient}"  Path="from repairsman where f_repairsmanstate = '空闲'"/>


            <o:UtilAction Name="util"/>
        </m:ResourceLoad>
        <toolkit:DockPanel LastChildFill="True" Width="Auto">
            <Grid Height="Auto" Width="Auto" Background="{StaticResource MainRightTitleColorBrush1}" Grid.Row="1" Margin="0" HorizontalAlignment="Left">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <sdk:TabControl Margin="0,0,0,8" Height="Auto" Grid.Column="0" VerticalAlignment="Stretch" Grid.Row="0" Width="Auto" d:LayoutOverrides="GridBox">
                    <sdk:TabItem Header="来电">
                        <toolkit:DockPanel LastChildFill="True" Height="Auto" Margin="0,0,0,-1">
                            <toolkit:WrapPanel x:Name="personsearch"  Background="{x:Null}" toolkit:DockPanel.Dock="Top" Margin="5,0,0,0" Orientation="Horizontal"   >
                                <a:Data.Context>
                                    <o:SearchObject>
                                        <o:PropertySetter PropertyName="f_username" Operator="f_username ='this'" />
                                    </o:SearchObject>
                                </a:Data.Context>
                                <TextBlock TextWrapping="Wrap" Text="用户ID："/>
                                <TextBox TextWrapping="Wrap" Text="{m:Bind Path=f_userid}" a:ControlAttach.DefaultButton="searchbutton" Margin="0" >
                                    <a:Data.Prop>
                                        <o:PropertySetter PropertyName="f_userid" Operator="f_userid like 'this%'"/>
                                    </a:Data.Prop>
                                </TextBox>
                                <TextBlock TextWrapping="Wrap" Text="用户姓名：" Margin="5,0,0,0"/>
                                <TextBox TextWrapping="Wrap" Text="{m:Bind Path=f_username}" a:ControlAttach.DefaultButton="searchbutton" Margin="0" >
                                    <a:Data.Prop>
                                        <o:PropertySetter PropertyName="f_username" Operator="f_username like 'this%'"/>
                                    </a:Data.Prop>
                                </TextBox>

                                <Button Content="  查  询  " x:Name="searchbutton" Click="{m:Exp Str=personsearch.DataContext.Search()}" Margin="5,0,0,0"/>
                            </toolkit:WrapPanel>

                            <toolkit:BusyIndicator BusyContent="正在查询，请稍等" IsBusy="{m:Exp Str=ld.ItemsSource.IsBusy}" Margin="0">

                                <sdk:DataGrid x:Name="ld" Margin="0,0,0,30"  AutoGenerateColumns="False"  
										IsReadOnly="True"  Height="Auto" VerticalAlignment="Stretch" Width="237" HorizontalAlignment="Left"   >
                                    <a:Data.Items>
                                        <!--<o:ObjectList x:Name="ldlist" WebClientInfo="{StaticResource dbclient}"
												Path="{m:Exp Str=$from t_repairsys where \{personsearch.DataContext.Condition\} and f_operator \=\'\{LoginUser.name\}\'  order by f_cucode desc}"
												IsOld="{m:Exp Str=main.DataContext.State\=\=$End$}"/>-->
                                        <o:PagedObjectList  x:Name="ldlist" WebClientInfo="{StaticResource dbclient}"
												Path="{m:Exp Str=$from t_repairsys where \{personsearch.DataContext.Condition\} and f_operator \=\'\{LoginUser.name\}\'}"
												IsOld="{m:Exp Str=main.DataContext.State\=\=$End$}"
												PageIndex="{m:Exp Str=pager.PageIndex}" PageSize="{m:Exp Str=pager.PageSize}" SumNames=""/>
                                    </a:Data.Items>

                                    <sdk:DataGrid.Columns>
                                        <sdk:DataGridTextColumn Header="序号" Binding="{Binding Index}"/>
                                        <sdk:DataGridTextColumn Header="报修编号" Binding="{Binding f_cucode}"/>
                                        <sdk:DataGridTextColumn Header="用户ID" Binding="{Binding f_userid}"/>
                                        <sdk:DataGridTextColumn Header="用户姓名" Binding="{Binding f_username}"/>

                                        <sdk:DataGridTextColumn Header="楼号" Binding="{Binding f_cusDom}"/>
                                        <sdk:DataGridTextColumn Header="地址" Binding="{Binding f_address}"/>
                                        <sdk:DataGridTextColumn Header="来电电话" Binding="{Binding f_phone}"/>

                                        <sdk:DataGridTextColumn Header="报修类型" Binding="{Binding f_repairtype}"/>
                                        <sdk:DataGridTextColumn Header="来电类型" Binding="{Binding f_teltype}"/>
                                        <sdk:DataGridTextColumn Header="处理方式" Binding="{Binding f_dealtype}"/>
                                        <sdk:DataGridTextColumn Header="接单部门" Binding="{Binding f_meetunit}"/>
                                        <sdk:DataGridTextColumn Header="接单人" Binding="{Binding f_accepter}"/>
                                        <sdk:DataGridTextColumn Header="是否处理" Binding="{Binding f_havadeal}"/>
                                        <sdk:DataGridTextColumn Header="完成情况" Binding="{Binding f_havacomplete}"/>

                                        <sdk:DataGridTextColumn Header="值班员" Binding="{Binding f_operator}"/>
                                        <sdk:DataGridTextColumn Header="报修日期" Binding="{Binding f_reporttime}"/>



                                    </sdk:DataGrid.Columns>
                                </sdk:DataGrid>
                            </toolkit:BusyIndicator>

                        </toolkit:DockPanel>
                    </sdk:TabItem>
                    <sdk:TabItem Header="维修处理" HorizontalAlignment="Stretch" Width="Auto" Margin="0">
                        <toolkit:DockPanel LastChildFill="True" Height="Auto" Margin="0" Width="Auto">
                            <toolkit:WrapPanel x:Name="personsearch2"  Background="{x:Null}" toolkit:DockPanel.Dock="Top" Margin="0" Orientation="Horizontal"   >
                                <a:Data.Context>
                                    <o:SearchObject>
                                        <o:PropertySetter PropertyName="f_username" Operator="f_username ='this'" Default="{m:Exp Str=LoginUser.name}"/>
                                    </o:SearchObject>
                                </a:Data.Context>
                                <TextBlock TextWrapping="Wrap" Text="维修人员："/>
                                <TextBox TextWrapping="Wrap" Text="{m:Bind Path=f_repairer2}" a:ControlAttach.DefaultButton="searchbutton" Margin="0" >
                                    <a:Data.Prop>
                                        <o:PropertySetter PropertyName="f_repairer2" Operator="f_repairer2 like 'this%'"/>
                                    </a:Data.Prop>
                                </TextBox>
                                <TextBlock TextWrapping="Wrap" Text="完成日期：" Margin="5,0,0,0"/>
                                <sdk:DatePicker SelectedDate="{m:Bind Path=f_completedate2}" Grid.Column="3" Margin="0,0,8,0" Grid.Row="5" VerticalAlignment="Center">
                                    <a:Data.Prop>
                                        <o:PropertySetter PropertyName="f_completedate2" Operator="to_char(f_completedate2, 'yyyy-mm-dd')=substring('this',1,10)" />
                                    </a:Data.Prop>
                                </sdk:DatePicker>

                                <Button Content="  查  询  " x:Name="searchbutton2" Click="{m:Exp Str=personsearch2.DataContext.Search()}" Margin="5,0,0,0"/>
                            </toolkit:WrapPanel>

                            <toolkit:BusyIndicator BusyContent="正在查询，请稍等" IsBusy="{m:Exp Str=wx.ItemsSource.IsBusy}" Margin="0,2,0,-2">
                                <sdk:DataGrid x:Name="wx" Margin="0"  AutoGenerateColumns="False"  
										IsReadOnly="True"  >
                                    <a:Data.Items>
                                        <o:ObjectList x:Name="wxlist" WebClientInfo="{StaticResource dbclient}"
												Path="{m:Exp Str=$from t_repairsys where \{personsearch2.DataContext.Condition\} and f_operator \=\'\{LoginUser.name\}\'}"
												IsOld="{m:Exp Str=main.DataContext.State\=\=$End$}"/>
                                    </a:Data.Items>
                                    <sdk:DataGrid.Columns>
                                        <sdk:DataGridTextColumn Header="序号" Binding="{Binding Index}"/>
                                        <sdk:DataGridTextColumn Header="处理方式" Binding="{Binding f_dealtype}"/>
                                        <sdk:DataGridTextColumn Header="是否处理" Binding="{Binding f_havadeal}"/>
                                        <sdk:DataGridTextColumn Header="派单人" Binding="{Binding f_sender}"/>
                                        <sdk:DataGridTextColumn Header="派单日期" Binding="{Binding f_senddate}"/>
                                        <sdk:DataGridTextColumn Header="接单人" Binding="{Binding f_accepter}"/>
                                        <sdk:DataGridTextColumn Header="接单部门" Binding="{Binding f_meetunit}"/>
                                        <sdk:DataGridTextColumn Header="维修人员" Binding="{Binding f_repairer2}"/>
                                        <sdk:DataGridTextColumn Header="完成日期" Binding="{Binding f_completedate2}"/>
                                        <sdk:DataGridTextColumn Header="值班员" Binding="{Binding f_operator}"/>
                                    </sdk:DataGrid.Columns>
                                </sdk:DataGrid>
                            </toolkit:BusyIndicator>
                        </toolkit:DockPanel>
                    </sdk:TabItem>
                    <sdk:TabItem Header="回访">
                        <toolkit:DockPanel LastChildFill="True" Height="Auto" Margin="0" Width="Auto">
                            <toolkit:WrapPanel x:Name="personsearch3"  Background="{x:Null}" toolkit:DockPanel.Dock="Top" Margin="5,0,0,0" Orientation="Horizontal"   >
                                <a:Data.Context>
                                    <o:SearchObject >
                                        <o:PropertySetter PropertyName="f_username" Operator="f_username ='this'" Default="{m:Exp Str=LoginUser.name}"/>
                                    </o:SearchObject>
                                </a:Data.Context>
                                <TextBlock TextWrapping="Wrap" Text="回访员："/>
                                <TextBox TextWrapping="Wrap" Text="{m:Bind Path=f_visitren}" a:ControlAttach.DefaultButton="searchbutton" Margin="0" >
                                    <a:Data.Prop>
                                        <o:PropertySetter PropertyName="f_visitren" Operator="f_visitren like 'this%'"/>
                                    </a:Data.Prop>
                                </TextBox>
                                <TextBlock TextWrapping="Wrap" Text="回访日期：" Margin="5,0,0,0"/>
                                <sdk:DatePicker SelectedDate="{m:Bind Path=f_visitrq}" Grid.Column="3" Margin="0,0,8,0" Grid.Row="5" VerticalAlignment="Center">
                                    <a:Data.Prop>
                                        <o:PropertySetter PropertyName="f_visitrq" Operator="to_char(f_visitrq, 'yyyy-mm-dd')=substring('this',1,10)" />
                                    </a:Data.Prop>
                                </sdk:DatePicker>
                                <Button Content="  查  询  " x:Name="searchbutton3" Click="{m:Exp Str=personsearch3.DataContext.Search()}" Margin="5,0,0,0"/>
                            </toolkit:WrapPanel>
                            <toolkit:BusyIndicator BusyContent="正在查询，请稍等" IsBusy="{m:Exp Str=hf.ItemsSource.IsBusy}">
                                <sdk:DataGrid x:Name="hf" Margin="0"  AutoGenerateColumns="False"  
										IsReadOnly="True" >
                                    <a:Data.Items>
                                        <o:ObjectList x:Name="hflist" WebClientInfo="{StaticResource dbclient}"
												Path="{m:Exp Str=$from t_repairsys where \{personsearch3.DataContext.Condition\} and f_operator \=\'\{LoginUser.name\}\'}"
												IsOld="{m:Exp Str=main.DataContext.State\=\=$End$}"/>
                                    </a:Data.Items>
                                    <sdk:DataGrid.Columns>
                                        <sdk:DataGridTextColumn Header="序号" Binding="{Binding Index}"/>
                                        <sdk:DataGridTextColumn Header="是否回访" Binding="{Binding f_ifvisit}"/>
                                        <sdk:DataGridTextColumn Header="回访员" Binding="{Binding f_visitren}"/>
                                        <sdk:DataGridTextColumn Header="回访日期" Binding="{Binding f_visitrq}"/>
                                        <sdk:DataGridTextColumn Header="回访时间" Binding="{Binding f_visitsj}"/>
                                        <sdk:DataGridTextColumn Header="质量满意情况" Binding="{Binding f_zlmiqk}"/>
                                        <sdk:DataGridTextColumn Header="服务态度满意情况" Binding="{Binding f_fwtdmiqk}"/>
                                    </sdk:DataGrid.Columns>
                                </sdk:DataGrid>
                            </toolkit:BusyIndicator>
                        </toolkit:DockPanel>
                    </sdk:TabItem>
                </sdk:TabControl>
                <Grid Grid.Column="1" x:Name="main" Margin="0,0,0,30" Width="Auto" Height="Auto" HorizontalAlignment="Stretch" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>
                    <a:Data.Context>
                        <!--来电对象-->
                        <!--从左边列表点击待值Source="{m:Exp Str='ld.SelectedItem'}"-->
                        <o:GeneralObject Name="maingo1" WebClientInfo="{StaticResource dbclient}" 
				            EntityType="t_repairsys"   
					            IsInit="{m:Exp Str=main.DataContext.State\=\=$End}">
                        </o:GeneralObject>
                    </a:Data.Context>
                    <sdk:TabControl Margin="0,0,0,-26" Grid.ColumnSpan="1" Width="Auto" HorizontalAlignment="Stretch">
                        <sdk:TabItem Header="来电信息" >
                            <Grid HorizontalAlignment="Stretch" Width="Auto" Margin="0,0,0,-1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="105"/>
                                    <ColumnDefinition Width="123"/>
                                    <ColumnDefinition Width="107.5"/>
                                    <ColumnDefinition Width="131.5"/>
                                    <ColumnDefinition Width="106"/>
                                    <ColumnDefinition Width="144"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30" />
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="70"/>
                                    <RowDefinition Height="51" />
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                </Grid.RowDefinitions>
                                <TextBlock TextWrapping="Wrap" Text="用户ID：" Margin="0" HorizontalAlignment="Right" Grid.Column="4" Height="25" VerticalAlignment="Center"/>
                                <TextBlock Margin="0" TextWrapping="Wrap" Text="用户姓名：" HorizontalAlignment="Right" Grid.Row="2" Height="25" VerticalAlignment="Center"/>
                                <TextBlock Margin="0" TextWrapping="Wrap" Text="联系方式：" Grid.Column="4" Grid.Row="2" Height="22" TextAlignment="Right"/>
                                <TextBlock Grid.Row="1" TextWrapping="Wrap" Text="单位：" Margin="0" Height="25" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                <TextBlock Margin="0,0,-0.5,0" Grid.Row="1" TextWrapping="Wrap" Text="用户地址：" Grid.Column="2" HorizontalAlignment="Right" Height="25" VerticalAlignment="Center"/>
                                <TextBlock Grid.Row="2" TextWrapping="Wrap" Text="楼号：" Margin="0,0,-0.5,0" Height="25" VerticalAlignment="Center" Grid.Column="2" HorizontalAlignment="Right"/>
                                <TextBlock Margin="0,0,-0.5,0" TextWrapping="Wrap" Text="来电电话：" Grid.Column="2" HorizontalAlignment="Right" Height="25" VerticalAlignment="Center"/>
                                <TextBlock Grid.Row="11" TextWrapping="Wrap" Text="报修日期：" Margin="0" Height="22" TextAlignment="Right" Grid.Column="4"/>
                                <TextBlock Margin="0,0,-0.5,0" Grid.Row="3" TextWrapping="Wrap" Text="表底数：" Grid.Column="2" Height="25" HorizontalAlignment="Right" VerticalAlignment="Center" d:LayoutOverrides="HorizontalAlignment"/>
                                <TextBlock Grid.Row="3" TextWrapping="Wrap" Text="表号：" Grid.Column="4" HorizontalAlignment="Right" Margin="0" Height="25" VerticalAlignment="Center"/>
                                <TextBlock Grid.Row="4" TextWrapping="Wrap" Text="表型：" Margin="0,0,-0.5,0" Grid.Column="2" HorizontalAlignment="Right" Height="25" VerticalAlignment="Center"/>
                                <TextBlock Grid.Row="4" TextWrapping="Wrap" Text="左右表：" Grid.Column="4" Margin="0" Height="25" HorizontalAlignment="Right" VerticalAlignment="Center" RenderTransformOrigin="-3.356,0.34"/>
                                <TextBlock Margin="0" Grid.Row="4" TextWrapping="Wrap" Text="累计购气量：" Height="22" HorizontalAlignment="Right"/>
                                <TextBlock Margin="0" Grid.Row="3" TextWrapping="Wrap" Text="用户类别：" Height="22" TextAlignment="Right"/>
                                <TextBlock Margin="0" Grid.Row="5" TextWrapping="Wrap" Text="通气日期：" Grid.Column="4" HorizontalAlignment="Right" Height="25" VerticalAlignment="Center"/>
                                <TextBlock Margin="0,0,-0.5,0" Grid.Row="5" TextWrapping="Wrap" Text="备注：" HorizontalAlignment="Right" Grid.Column="2" Height="25" VerticalAlignment="Center"/>
                                <TextBlock Margin="0" Grid.Row="7" TextWrapping="Wrap" Text="来电类型：" Grid.Column="2" Height="22" TextAlignment="Right" HorizontalAlignment="Right"/>
                                <TextBlock Margin="0" Grid.Row="7" TextWrapping="Wrap" Text="报修类型：" RenderTransformOrigin="0.631,2.08" Height="22" HorizontalAlignment="Right"/>

                                <TextBlock Margin="0" Grid.Row="9" TextWrapping="Wrap" Text="处理记录：" Height="22" TextAlignment="Right"/>
                                <TextBlock Margin="0" Grid.Row="7" TextWrapping="Wrap" Text="处理方式：" Grid.Column="4" Height="22" HorizontalAlignment="Right"/>
                                <TextBlock Grid.Row="8" TextWrapping="Wrap" Text="来电内容：" Margin="0" Height="22" TextAlignment="Right"/>
                                <TextBox Text="{m:Bind Path=f_userid}" Margin="0" TextWrapping="Wrap" Height="25" Grid.Column="5" Width="Auto" HorizontalAlignment="Stretch">
                                    <a:Data.Prop>
                                        <o:PropertySetter PropertyName="f_userid"  Value="{m:Exp Str=consumer.f_userid}" />
                                    </a:Data.Prop>
                                </TextBox>
                                <TextBox Text="{m:Bind Path=f_username}" Margin="0" TextWrapping="Wrap" Height="25" Grid.Column="1" Width="Auto" HorizontalAlignment="Stretch" Grid.Row="2">
                                    <a:Data.Prop>
                                        <o:PropertySetter PropertyName="f_username" Value="{m:Exp Str=consumer.f_username}" />
                                    </a:Data.Prop>
                                </TextBox>
                                <TextBox Text="{m:Bind Path=f_phone}" Margin="0" TextWrapping="Wrap" Height="25" Grid.Column="5" Width="Auto" HorizontalAlignment="Stretch" RenderTransformOrigin="-0.204,0.68" Grid.Row="2" IsReadOnly="True">
                                    <a:Data.Prop>
                                        <o:PropertySetter PropertyName="f_phone" Value="{m:Exp Str=consumer.f_phone}" />
                                    </a:Data.Prop>
                                </TextBox>
                                <TextBox Text="{m:Bind Path=f_username}" Margin="0" Grid.Row="1" TextWrapping="Wrap" Height="25" Grid.Column="1" Width="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                    <a:Data.Prop>
                                        <o:PropertySetter PropertyName="f_username" NotNull="True" Value="{m:Exp Str=consumer.f_username}" />
                                    </a:Data.Prop>
                                </TextBox>
                                <TextBox Text="{m:Bind Path=f_address}" Margin="0" Grid.Row="1" TextWrapping="Wrap" Height="25" Grid.Column="3" Grid.ColumnSpan="3" HorizontalAlignment="Stretch" Width="Auto">
                                    <a:Data.Prop>
                                        <o:PropertySetter PropertyName="f_address" NotNull="True" Value="{m:Exp Str=consumer.f_address}" />
                                    </a:Data.Prop>
                                </TextBox>
                                <TextBox Text="{m:Bind Path=f_cusDom}" Margin="0" Grid.Row="2" TextWrapping="Wrap" Height="25" Grid.Column="3" Width="Auto">
                                    <a:Data.Prop>
                                        <o:PropertySetter PropertyName="f_cusDom" NotNull="True" Value="{m:Exp Str=consumer.f_cusDom}" />
                                    </a:Data.Prop>
                                </TextBox>
                                <TextBox Text="{m:Bind Path=f_phone}" Margin="0" Grid.Row="0" TextWrapping="Wrap" Height="25" Grid.Column="3" Width="Auto" RenderTransformOrigin="-0.288,0.36" HorizontalAlignment="Stretch" IsReadOnly="False">
                                    <a:Data.Prop>
                                        <o:PropertySetter PropertyName="f_phone" NotNull="True" Value="{m:Exp Str=Phone.CallNumber}"/>
